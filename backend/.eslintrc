{
  "parser": "babel-eslint",
  "env": {
    "commonjs": true,
    "esnext": true,
    "node": true,
    "browser": false
  },
  "extends": ["eslint:recommended", "prettier"],
  "globals": {
      "Atomics": "readonly",
      "SharedArrayBuffer": "readonly"
      "strapi": true
  },
  "parserOptions": {
      "ecmaVersion": "latest",
      "ecmaFeatures": {
        "experimentalObjectRestSpread": true,
        "jsx": false
      },
      "sourceType": "module"
  },
  "rules": {
      "indent": ["error", 4],
      "key-spacing": [
          "error",
          {
              "singleLine": {
                  "beforeColon": false,
                  "afterColon": true
              }
          }
      ],
      "quotes": ["error", "single"]
  }
}
